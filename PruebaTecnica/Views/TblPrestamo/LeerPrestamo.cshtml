
@{
    ViewData["Title"] = "LeerPrestamo";
    Layout = "~/Views/Shared/LayoutMod.cshtml";
}

@model List<PrestamoModel>

<style>

    /* Set height of the grid so .sidenav can be 100% (adjust as needed) */
    .row.content {
        height: 60em;
    }

    /* Set gray background color and 100% height */
    .sidenav {
        padding-top: 10px;
        background-color: #66ffb3;
        height: 100%;
        width: 100%
    }
</style>

<body class="bg-black">
    <div class="container text-center">
        <div class="row content">
            <div class="col-lg-2 sidenav">

                <br />
                <div class="container">
                    <h2>ADMINISTRACIÓN DE LIBROS</h2>
                    <hr>
                    <table class="table table-dark table-striped">
                        <thead>
                            <tr>
                                <th>TITULO</th>
                                <th>ESTUDIANTO QUE RENTÓ</th>
                                <th>FECHA DE PRESTAMO</th>
                                <th>FECHA DE DEVOLUCION</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.StrNombreLibro</td>
                                    <td>@item.StrNombre</td>
                                    <td>@item.DtmFechaPrestamo</td>
                                    <td>@item.DtmFechaRegreso</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div>
                        <a class="btn btn-primary active bg-success text-white" aria-current="page" asp-area="" asp-controller="TblPrestamo" asp-action="InsertarPrestamo">Prestar libro</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

