<!DOCTYPE html>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Principal" asp-action="Inicio"><strong>Biblioteca I.U Pascual Bravo</strong></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link active text-info text-opacity-100 " asp-area="" asp-controller="Principal" asp-action="Inicio" aria-current="page">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-info text-opacity-20" asp-area="" asp-controller="TblPrestamo" asp-action="LeerPrestamo" > Prestamos </a>
                        </li>
                        <li class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle text-info bg-dark" type="button" id="DropBtnRegristro" data-bs-toggle="dropdown" aria-expanded="false">
                                Registros
                            </button>
                            <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="dropdownMenuButton2">
                                <li><a class="dropdown-item" asp-area="" asp-controller="TblEstudiante" asp-action="LeerEstudiante"> Registro de estudiantes </a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="TblLibro" asp-action="LeerLibro"> Registro de libros </a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
                    
            </div>
    </nav>


    <div>
        @RenderBody()
    </div>

    <footer>
        <div class="bg-dark">
        <br>        
            <p class="text-center text-info"><i>.Net MVC Entity Framework</i></p>
        
            <p class="text-center text-white"><i>Desarrollado por Jaiber Jiménez</i></p>
        
            <p class="text-center text-white"><i>Como</i></p>
        
            <p class="text-center text-white"><i>Prueba Técnica</i></p>
            <p class="text-center text-white"><i>Institución Universitaria Pascual Bravo</i></p>
            <p class="text-center text-white"><i>2023</i></p>
            <br>
        </div>
    </footer>
</body>
</html>
